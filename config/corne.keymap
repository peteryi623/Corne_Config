#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/pointing.h>
#include <dt-bindings/zmk/pointing.h>

/ {
    macros {
        next_tab: next_tab {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LEFT_CONTROL &kp TAB>;
            label = "NEXT_TAB";
        };

        previous_tab: previous_tab {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LEFT_CONTROL &kp LEFT_SHIFT &kp TAB>;
            label = "PREVIOUS_TAB";
        };

        next_window: next_window {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LEFT_ALT &kp TAB>;
            label = "NEXT_WINDOW";
        };

        previous_window: previous_window {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LEFT_ALT &kp LEFT_SHIFT &kp TAB>;
            label = "PREVIOUS_WINDOW";
        };

        windows_options: windows_options {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LEFT_WIN &kp X>;
            label = "WINDOWS_OPTIONS";
        };

        task_manager: task_manager {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LEFT_CONTROL &kp LEFT_ALT &kp DEL>;
            label = "TASK_MANAGER";
        };

        shift_tab_right: shift_tab_right {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LEFT_CONTROL &kp LEFT_SHIFT &kp PAGE_DOWN>;
            label = "SHIFT_TAB_RIGHT";
        };

        shift_tab_left: shift_tab_left {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LEFT_CONTROL &kp LEFT_SHIFT &kp PAGE_UP>;
            label = "SHIFT_TAB_LEFT";
        };

        vlc_playlist: vlc_playlist {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LEFT_CONTROL &kp L>;
            label = "VLC_PLAYLIST";
        };

        vlc_toggle_audio_device: vlc_toggle_audio_device {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LEFT_SHIFT &kp A>;
            label = "VLC_TOGGLE_AUDIO_DEVICE";
        };

        windows_audio_device: windows_audio_device {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LEFT_WIN &kp LEFT_CONTROL &kp V>;
            label = "WINDOWS_AUDIO_DEVICE";
        };
    };

    combos {
        compatible = "zmk,combos";

        f1_combo {
            bindings = <&kp F1>;
            key-positions = <32 37 41>;
        };

        f2_combo {
            bindings = <&kp F2>;
            key-positions = <33 37 41>;
        };

        f3_combo {
            bindings = <&kp F3>;
            key-positions = <34 37 41>;
        };

        f4_combo {
            bindings = <&kp F4>;
            key-positions = <20 37 41>;
        };

        f5_combo {
            bindings = <&kp F5>;
            key-positions = <37 21 41>;
        };

        f6_combo {
            bindings = <&kp F6>;
            key-positions = <37 22 41>;
        };

        f7_combo {
            bindings = <&kp F7>;
            key-positions = <37 41 8>;
        };

        f8_combo {
            bindings = <&kp F8>;
            key-positions = <37 41 9>;
        };

        f9_combo {
            bindings = <&kp F9>;
            key-positions = <37 41 10>;
        };
    };

    behaviors {
        hold_tap_layer: hold_tap_layer {
            compatible = "zmk,behavior-hold-tap";
            label = "HOLD_TAP_LAYER";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            hold-trigger-key-positions = <37 40>;
            bindings = <&mo>, <&tog>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            display-name = "Default";
            bindings = <
&kp ESC    &kp Q  &kp W  &kp E             &kp R  &kp T        &kp Y      &kp U  &kp I            &kp O    &kp P     &kp BSPC
&kp TAB    &kp A  &kp S  &kp D             &kp F  &kp G        &kp H      &kp J  &kp K            &kp L    &kp SEMI  &kp SQT
&kp LSHFT  &kp Z  &kp X  &kp C             &kp V  &kp B        &kp N      &kp M  &kp COMMA        &kp DOT  &kp FSLH  &kp RIGHT_SHIFT
                         &kp LEFT_CONTROL  &mo 2  &kp ENTER    &kp SPACE  &mo 1  &lt 3 RIGHT_ALT
            >;
        };

        nav_num_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
            // | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
            // | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            display-name = "NavNum";
            bindings = <
&next_window      &previous_tab  &kp UP_ARROW  &next_tab         &shift_tab_right  &kp PAGE_UP      &kp KP_MULTIPLY  &kp PLUS         &kp KP_NUMBER_7  &kp KP_NUMBER_8  &kp KP_NUMBER_9  &kp DEL
&previous_window  &kp LEFT       &kp DOWN      &kp RIGHT         &shift_tab_left   &kp PAGE_DOWN    &kp KP_DIVIDE    &kp MINUS        &kp KP_NUMBER_4  &kp KP_NUMBER_5  &kp KP_NUMBER_6  &kp C_VOLUME_UP
&kp LEFT_SHIFT    &trans         &kp F11       &task_manager     &windows_options  &kp C_AC_HOME    &kp EQUAL        &kp KP_NUMBER_0  &kp KP_NUMBER_1  &kp KP_NUMBER_2  &kp KP_NUMBER_3  &kp C_VOLUME_DOWN
                                               &kp LEFT_CONTROL  &trans            &kp ENTER        &kp SPACE        &trans           &trans
            >;
        };

        spec_char_layer {
            display-name = "Special";
            bindings = <
&trans     &kp TILDE    &kp PERCENT    &kp CARET         &kp DLLR         &kp EQUAL       &kp BACKSLASH  &kp LEFT_BRACKET      &kp RIGHT_BRACKET      &trans          &trans           &kp BSPC
&kp GRAVE  &kp AT_SIGN  &kp AMPERSAND  &kp HASH          &kp EXCLAMATION  &kp QUESTION    &kp SLASH      &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp LEFT_BRACE  &kp RIGHT_BRACE  &trans
&kp LSHFT  &trans       &trans         &kp UNDERSCORE    &kp MINUS        &trans          &kp PIPE       &kp LESS_THAN         &kp GREATER_THAN       &trans          &trans           &kp RIGHT_SHIFT
                                       &kp LEFT_CONTROL  &trans           &kp ENTER       &kp SPACE      &trans                &trans
            >;
        };

        media_nav_layer {
            display-name = "Media";
            bindings = <
&next_window      &previous_tab  &kp UP_ARROW  &next_tab         &shift_tab_right  &kp PAGE_UP      &kp A         &vlc_toggle_audio_device  &mkp MB1        &mmv MOVE_UP    &mkp MB2         &kp DEL
&previous_window  &kp LEFT       &kp DOWN      &kp RIGHT         &shift_tab_left   &kp PAGE_DOWN    &kp S         &windows_audio_device     &mmv MOVE_LEFT  &mmv MOVE_DOWN  &mmv MOVE_RIGHT  &kp C_VOLUME_UP
&kp LEFT_SHIFT    &trans         &kp F11       &kp P             &kp N             &kp C_AC_HOME    &bt BT_SEL 0  &bt BT_SEL 1              &bt BT_SEL 2    &bt BT_CLR      &out OUT_TOG     &kp C_VOLUME_DOWN
                                               &kp LEFT_CONTROL  &trans            &kp ENTER        &kp SPACE     &trans                    &trans
            >;
        };
    };
};
